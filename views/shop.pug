extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")

block children
        main
            if prods.length > 0
                each product in prods
                    article 
                        header 
                            h1 #{product.title}
                        div 
                            img(src="https://dictionary.cambridge.org/ko/images/thumb/book_noun_001_01679.jpg?version=5.0.310", alt="book")
                        div
                            h2 $19.9
                            p A very interesting book about programming
                        div 
                            button Add to Cart
            else 
                h1 No products found